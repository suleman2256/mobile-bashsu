<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="@string/title_item_notification"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:fontFamily="@font/roboto_light"
                android:text="@string/description_item_notification"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageViewVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewTitle"
                android:layout_alignBottom="@+id/textViewDescription"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/icon_notification_visible" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>